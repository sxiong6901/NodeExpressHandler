<h1>Welcome to McDonald's!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>


<ul>
  {{#each burgers}}

  {{/each}}
</ul>

<h2>Hungry?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Choose a burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label>Ready to eat?</label><br>
    <input type="radio" name="devoured" value="1" checked> Yes, Eat!<br>
  </div>

  <button type="submit">I'm Loving It!</button>
</form>
