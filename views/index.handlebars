<h1>Welcome to McDonald's!</h1>

<h2>Burger List:</h2>

<ul>
  {{#each burgers}}
    {{#unless eat}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>


<ul>
  {{#each burgers}}
    {{#if eat}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Choose a Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eat">Ready to eat?</label><br>
    <input type="radio" name="eat" value="1" checked> YUM YUM<br>

  </div>

  <button type="submit">I'm Lovin' It!</button>
</form>
